<div class="container">
<h1><%= link_to "Yelp",restaurants_path %></h1>

<div class="info">
<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
</div>

<%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mb-4" %>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between"><%= review.content %> <span><%= review.rating %>/5</span></li>
  <% end %>
</ul>
</div>
